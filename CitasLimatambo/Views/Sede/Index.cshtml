@model IEnumerable<CitasLimatambo.Models.Sede>

@{
    ViewBag.Title = "Inicio | Clínica Limatambo";
}


<div class="container body-content">
    <main class="container-servicio-apoyo">
        <div class="content-search">
            <div class="container">
                <form action="" id="buscarPlantel" method="get">
                    <div class="content-input-circle box-1">
                        <select class="select-circle" name="sedes" id="sedes" style="display: none;">
                            @foreach (var item in Model)
                            {
                                <option selected="" value="0"> @Html.DisplayFor(modelItem => item.nombre)</option>
                            }

                        </select>
                        <span tabindex="0" id="sedes-button" role="combobox" aria-expanded="false" aria-autocomplete="list" aria-owns="sedes-menu" aria-haspopup="true" class="ui-selectmenu-button ui-selectmenu-button-closed ui-corner-all ui-button ui-widget">
                            <span class="ui-selectmenu-icon ui-icon ui-icon-triangle-1-s">
                            </span>
                            <span class="ui-selectmenu-text">
                                Sede principal
                            </span>
                        </span>
                    </div>
                    <div class="content-input-circle">
                        <input class="btn btn-red" type="submit" value="buscar">
                    </div>
                </form>
            </div>
        </div>

        <div class="av-container av-visible">
            <div class="content-servicio-apoyo-diagnostico aniview animated fadeIn" data-av-animation="fadeIn" style="opacity: 1;">
                <div class="container">
                    <div class="owl-servicio-diagnostico">
                        @foreach (var item in Model)
                        {
                            <div id="@Html.DisplayFor(modelItem => item.ID)">
                            @foreach (var i in item.especialidadesPorSede)
                            {
                                <div class="item">
                                    <div class="titulo_boton">
                                        <a href="/especialidadPorSede/@Html.DisplayFor(modelItem => i.ID)" onclick="" class="boton_mostrar">
                                            <img src="@Html.DisplayFor(modelItem => i.especialidad.imagenVector)" alt="">
                                            <img class="hover_servicio_img" src="@Html.DisplayFor(modelItem => i.especialidad.imagen)" alt="">
                                            <span>@Html.DisplayFor(modelItem => i.especialidad.nombre)</span>
                                        </a>
                                    </div>
                                </div>
                            }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </main>
</div>


<div class="ui-selectmenu-menu ui-front" style="top: 421px; left: 620.5px;">
    <ul aria-hidden="false" aria-labelledby="sedes-button" id="sedes-menu" role="listbox" tabindex="0" class="ui-menu ui-corner-bottom ui-widget ui-widget-content" aria-activedescendant="ui-id-1" aria-disabled="false" style="width: 300px;">
        @foreach (var item in Model)
        {
            <li class="ui-menu-item">
                <div id="ui-id-1" tabindex="-1" role="option" class="ui-menu-item-wrapper ui-state-active">
                    @Html.DisplayFor(modelItem => item.nombre)
                </div>
            </li>
        }

    </ul>
</div>